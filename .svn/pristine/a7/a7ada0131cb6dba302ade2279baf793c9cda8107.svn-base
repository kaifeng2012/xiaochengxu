swiper{
 width:750rpx;
 height:421rpx;
 overflow:hidden;
 display: flex;
 white-space: nowrap;
}
swiper image{
  width:750rpx;
  height:421rpx;
}
.swiper-box .wx-swiper-dots.wx-swiper-dots-horizontal{
     margin-bottom: -15rpx;
}
.swiper-box .wx-swiper-dot{
    width:5px;
    display: inline-flex;
    height: 5px;
    /* margin-left: 20rpx; */
    justify-content:space-between;
   
     position:relative;
     bottom:20px;
     z-index:1000; 
    
}
.swiper-box .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background:#cccccc;
  
     border-radius: 8rpx 
}
.swiper-box .wx-swiper-dot-active::before{
    background:#29a1f7;   
     
}
