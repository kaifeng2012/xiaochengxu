const app = getApp()
Page({

  /**
   * 页面的初始数据
   */
  
  data: {
    img: '',
  },
 
  /**
   * 生命周期函数--监听页面加载
   */
  onLoad: function (options) {
    var that = this
    var imgpath = app.globalData.imgpath
    //console.log(imgpath);
    this.setData({
      img: imgpath,
    })
    wx.request({
      url: app.globalData.rootPath+'/indexController/getNoticeList',
      method: 'GET',
      success: function (res) {    
        that.setData({
          advert: res.data,
        })
      }
    })
    wx.request({
      url: app.globalData.rootPath + '/indexController/getAdvertList',
      method: 'GET',
      success: function (res) {
        that.setData({
          notice  : res.data,
        })
      }
    })
    wx.getLocation({
      type: 'wgs84',
      success: function (res) {
        var latitude = res.latitude
        var longitude = res.longitude
        wx.request({
          url: app.globalData.rootPath + '/centerController/getCentersList',
          data: {//发送给后台的数据
            latitude: latitude,
            longitude: longitude
          },
          method: 'GET',
          success: function (res) {
            that.setData({
              center: res.data,
              
            })
           
          }
        })
      }
    })
    // wx.request({
    //   url: app.globalData.rootPath + '/centerController/getCenterList',
    //   method: 'GET',
    //   success: function (res) {
    //     that.setData({
    //       center: res.data,
    //     })
    //   }
    // })
       

  },
  gocenter: function (event) {
    var centerid = event.currentTarget.dataset.postid;
    wx.navigateTo({
      url: "post-detail/details?id=" + centerid
    })
  },

  /**
   * 生命周期函数--监听页面初次渲染完成
   */
  onReady: function () {
   
  },

  /**
   * 生命周期函数--监听页面显示
   */
  onShow: function () {

  },

  /**
   * 生命周期函数--监听页面隐藏
   */
  onHide: function () {

  },

  /**
   * 生命周期函数--监听页面卸载
   */
  onUnload: function () {

  },

  /**
   * 页面相关事件处理函数--监听用户下拉动作
   */
  onPullDownRefresh: function () {

  },

  /**
   * 页面上拉触底事件的处理函数
   */
  onReachBottom: function () {

  },

  /**
   * 用户点击右上角分享
   */
  onShareAppMessage: function () {

  }
})