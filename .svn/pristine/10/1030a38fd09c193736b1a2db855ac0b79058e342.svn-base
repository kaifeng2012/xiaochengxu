page{
  background-color:#f2f2f2;
  font-size:16px;
   font-family:"microsoft yahei", Arial, Helvetica, sans-serif; 
}
#map{
  width:750rpx;
  height:562.5rpx;
}
map{
  z-index:100;
  position:static;
}
.back{
  width:42rpx;
  height:42rpx;
  position:fixed;
  top:17rpx;
  left:17rpx;
   z-index:1000; 
}

.notice-icon-title{
   height:80rpx; 
  background:#ffffff; 
  margin-top:15rpx;
}
.notice-icon{
   width:45rpx;
    height:45rpx;
     display:inline-block; 
    margin-left:30rpx;
     /* vertical-align:middle;   */
     margin-bottom:18rpx;

   
}
.notice-title{
   display:inline-block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-wrap: normal;
    word-wrap: break-word;
    word-break: break-all;
    width: 80%;
    line-height:80rpx;
    font-size:14px;
    
}
.f-r{
  float:right;
}
.f-l{
  float:left;
}
.juli{
  color:#29a1f7;

  margin-left:-10px;
  position:absolute;
  top:-20px;
}
.aside-left {
   -webkit-overflow-scrolling: touch;
  overflow-scrolling: touch;
   width:750rpx; 
  position:relative;
  margin-bottom:20rpx;
   margin-top: 50rpx;
  text-align:center;
  background:#ffffff;
  height:260px;
}
.aside-left a {
  text-decoration: none;
  color: #333;
}
.aside-left .line {
  margin-left: 110px;
}
.aside-left .line .dateIcon {
  position: relative;
  top: 10px;
  left: -6px;
  width:20rpx;
  height:20rpx;
}
.aside-left .line h3 {
  position: relative;
  top: -1.9rem;
  left: 1.2rem;
  color: #6C6C6C;
}
.aside-left .line .homeInfo {
  width:700rpx;
  height: 140rpx;
  min-height: 280rpx;
  background: #fff;
  position:absolute;
  border-bottom-left-radius: 8px;
  border-bottom-right-radius: 8px;
  left:25rpx;
  top:46px; 
  border:1px solid #E5E5E5;
  box-shadow: 0px 1px 0px #E5E5E5;
}
.homeInfo .title{
  position:relative;
  top:-68px;
  left:25rpx;
  color:#ffffff;
  font-size:20px;
}

.bg{
  width: 705rpx;
  height:84rpx;
  position:relative;
  top:-30px;
  left:-1rpx;
}
.homeInfo .address {
  width: 100%;
  display: inline-block;
  margin-top: 0.15rem;
}
.homeInfo .address li {
  width: 50%;
  display: inline-block;
}
.leftPic{
  float:left;
  width:40%;
}
.address .leftPic image {
  width:280rpx;
  height:210rpx;
  border-radius:8px;
  position:absolute;
  bottom:25rpx;
  left:10rpx;
}
.aside-right{
  float:left;
  width:60%;
  margin-left:311rpx;

}
.aside-right .addressInfo {
  /* margin-top:-118rpx; */
  /* margin-left:311rpx; */
  position:relative;
  top:-129rpx;
  height:120rpx;
}

 .addressInfo image {
  width:34rpx;
  height:34rpx;
 
  margin-right:10rpx;
  display:-webkit-box;
  position:relative;
  top:30rpx;

}
.addressInfo text,.distance text,.yunying text{
  display: inline-block;
  word-wrap: break-word;
  width:83%;
  font-size:14px;
  text-align:left; 
  line-height: 38rpx;
  overflow: hidden;
  text-overflow: ellipsis;
 display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-left:40rpx;
  
   
}
.yunying {
  /* margin-left:311rpx; */
  position:relative;  
   height:60rpx;
   top:-160rpx;
  

}
.yunying text{
  font-size:14px;
  text-align:left; 
  
}
 .distance{
    /* margin-left:311rpx; */
    position:relative;
    top:-140rpx;
}
.distance text{
   text-align:left; 
}
.yunying image ,.distance image{
  width:34rpx;
  height:34rpx;
   margin-right:10rpx; 
   vertical-align: middle;
   display:-webkit-box;
  position:relative;
  top:30rpx;

}
.distance text{
    display: inline-block;
    word-wrap: break-word;
    width:83%;
    font-size:14px;
    position:relative;
    top:-10rpx;

}

.post-container{
    flex-direction:column;
    display:flex;
    margin-top:35rpx;
    margin-bottom:40rpx;
    margin-left: 0rpx;
    background-color:#f2f2f2;
    border-bottom: 1px solid #ededed;
    border-top: 1px solid #ededed;
    padding-bottom: 5px;

}

.post-author-date{
    margin-top:10rpx;
    margin-bottom: 20rpx;
    margin-left: 10px;
}

.post-author{
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
}

.post-date{
    margin-left: 20px;
    vertical-align: middle;
}

.post-image{
    width:100%;
    height:340rpx;
    margin:auto 0;
    margin-bottom: 15px;
}

.post-date{
    font-size:26rpx;
    margin-bottom: 10px;
}
.post-title{
    font-size:34rpx;
    font-weight: 600;
    color:#333;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-content{
    color:#666;
    font-size:28rpx;
    margin-bottom:20rpx;
    margin-left: 20rpx;
    letter-spacing:2rpx;
    line-height: 40rpx;
}
.post-like{
    font-size:13px;
    line-height: 16px;
    margin-left: 10px;
}

.post-like-image{
    height:16px;
    width:16px;
    margin-right: 8px;
    vertical-align:middle;
}

.post-like-font{
    vertical-align:middle;
    margin-right: 20px;
}
.dialing{
  background:#29a1f9;
  color:#ffffff;
  width:25%;
  padding:5px;
  border-radius:15px;
  position:absolute;
  bottom:8%;
  left:37%;
  box-shadow: 0px 8px 0px rgba(41,161,249,0.1);
}
.public-num{
  background:#39e0bf;
  color:#ffffff;
   width:25%;
  padding:5px;
  border-radius:15px;
  position:absolute;
  bottom:8%;
  right:15%;
   box-shadow: 0px 8px 0px rgba(57,224,191,0.1);
   /* opacity: 0.6 */
}
.opening-time{
  background:#ffffff;
  height:92rpx;
  line-height:92rpx;
  padding-left:30rpx;
}
.opening-time .time{
  color:#29a1f9;
  margin-left:30rpx;
}
.llCenter-title{
  padding-left:30rpx;
  height:80rpx;
  line-height:80rpx;
}
.llCenter-Info{
  background:#ffffff;
  margin-bottom:20rpx;
  padding-bottom:20rpx;
  padding-top:20rpx;
}
.llCenter-Info text{
  width:90%;
  display:inline-block;
  text-indent:30px;
  text-align:justify;
  margin-left:5%;
  font-size:14px;

  line-height:25px;
}
.llCenter-Info image{
  width:90%;
  display:inline-block;
  text-align:justify;
  margin-left:5%;
  margin-top:10rpx;
}